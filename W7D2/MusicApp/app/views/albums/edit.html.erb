<h2>Edit Album</h2>

<form action="<%=album_url(@album)%>" method = "POST">
    <input type="hidden" name="_method" value="PATCH">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <label>Title
        <input type="text" name="album[title]" value="<%=@album.title%>">
    </label>
    <br>
    <label>Year
        <input type="text" name="album[yr]" value="<%=@album.yr%>">
    </label>
    <br>
    <label>Live or Studio Album?
        <label>Live
            <input type="radio" name="album[studio]" value="<%= false %>" <%= @album.studio == false ? "checked" : "" %>>
        </label>
        <label>Studio
            <input type="radio" name="album[studio]" value="<%= true %>" <%= @album.studio == true ? "checked" : "" %>>
        </label>
    </label>

    <input type="hidden" name="album[band_id]" value="<%=@album.band_id%>">
    
    <input type="submit" value="Edit Album">
</form>
