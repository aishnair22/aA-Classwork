<h2>Add New Album</h2>

<form action="<%=albums_url%>" method = "POST">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <label>Title
        <input type="text" name="album[title]" value="<%=@album.title%>">
    </label>
    <br>
    <label>Year
        <input type="text" name="album[yr]" value="<%=@album.yr%>">
    </label>
    <br>
    <label>Live or Studio Album?
        <label>Live
            <input type="radio" name="album[studio]" value="<%= false %>">
        </label>
        <label>Studio
            <input type="radio" name="album[studio]" value="<%= true %>" checked>
        </label>
    </label>

    <input type="hidden" name="album[band_id]" value="<%=params[:band_id]%>">
    
    <input type="submit" value="Create Album">
</form>

