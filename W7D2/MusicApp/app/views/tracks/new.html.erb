<h2>Add New Track</h2>

<form action="<%=tracks_url%>" method = "POST">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <label>Title
        <input type="text" name="track[title]" value="<%=@track.title%>">
    </label>
    <br>
    <label>Track Number
        <input type="text" name="track[ord]" value="<%=@track.ord%>">
    </label>
    <br>
    <label>Bonus Track?
        <label>Yes
            <input type="radio" name="track[bonus_track?]" value="<%= true %>">
        </label>
        <label>No
            <input type="radio" name="track[bonus_track?]" value="<%= false %>" checked>
        </label>
    </label>
    <br>
    <label>Lyrics (if available)
        <input type="textarea" name="track[lyrics]" value="<%=@track.lyrics%>">
    </label>
    <br>

    <input type="hidden" name="track[album_id]" value="<%=params[:album_id]%>">
    
    <input type="submit" value="Create Track">
</form>

